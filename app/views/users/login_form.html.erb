<div id="fh5co-page"> 
  <div id="fh5co-main">
    <div class="fh5co-narrow-content"> 
      <div class="container text-center">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <div class="form-heading border-bottom border-primary border-2 d-inline-block mb-5"><h1>ログイン</h1></div>
        <div class="form users-form">
          <div class="form-body">

            <%= form_tag("/login") do %>
              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="email" class="form-label bd-highlight">メールアドレス</label>
                <input type="email" name="email" value = "<%= @email%>"　class="form-control p-2 bd-highlight" id="email" placeholder="name@example.com">
              </div>

              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="share_id" class="form-label bd-highlight" >共有ID</label>
                <input type="text" name="share_id" value = "<%= @share_id%>"　class="form-control p-2 bd-highlight" id="share_id" aria-describedby="share_idHelpBlock">
                <div id="share_idHelpBlock" class="form-text">
                  共有したい人と同じIDにしてください
                </div>
              </div>

              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="password" class="form-label bd-highlight">パスワード</label>
                <input type="password" name="password" value = "<%= @password%>"　class="form-control p-2 bd-highlight" id="password">
              </div>

              <input type="submit" value="ログイン" class="btn btn-primary">

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>