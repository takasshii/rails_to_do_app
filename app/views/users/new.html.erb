<div id="fh5co-page"> 
  <div id="fh5co-main">
    <div class="fh5co-narrow-content"> 
      <div class="container text-center">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <div class="form-heading border-bottom border-primary border-2 d-inline-block mb-5"><h1>新規ユーザー登録</h1></div>
        <div class="form users-form">
          <div class="form-body">

            <%= form_tag("/users/create") do %>
              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="name_input" class="form-label bd-highlight">ユーザー名</label>
                <input name="name" value = "<%= @user.name%>"　class="form-control p-2 bd-highlight" id="name_input">
              </div>

              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="email" class="form-label bd-highlight">メールアドレス</label>
                <input type="email" name="email" value = "<%= @user.email%>"　class="form-control p-2 bd-highlight" id="email" placeholder="name@example.com">
              </div>

              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="share_id" class="form-label bd-highlight" >共有ID</label>
                <input type="text" name="share_id" value = "<%= @user.share_id%>"　class="form-control p-2 bd-highlight" id="share_id" aria-describedby="share_idHelpBlock">
                <div id="share_idHelpBlock" class="form-text">
                  共有したい人と同じIDにしてください
                </div>
              </div>

              <div class="form-group d-flex flex-column bd-highlight width-200 mb-4">
                <label for="password" class="form-label bd-highlight">パスワード</label>
                <input type="password" name="password" value = "<%= @user.password%>"　class="form-control p-2 bd-highlight" id="password">
              </div>
              
              <div class="form-group mb-3">
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="female">
                  <label class="form-check-label" for="flexRadioDefault1">
                    女性
                  </label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault2" value="male" checked>
                  <label class="form-check-label" for="flexRadioDefault2">
                    男性
                  </label>
                </div>
              </div>

              <input type="submit" value="新規登録" class="btn btn-primary">

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>